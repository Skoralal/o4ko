<Window x:Class="o4ko.Views.HighlightPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Highlight Properties" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Enter highlight name:" Margin="0,0,0,5" />
        <TextBox x:Name="HighlightNameTextBox" Margin="0,0,0,10" />

        <TextBlock Text="Select data type:" Margin="0,0,0,5" />
        <ComboBox x:Name="DataTypeComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="int" />
            <ComboBoxItem Content="string" />
            <ComboBoxItem Content="double" />
            <ComboBoxItem Content="bool" />
        </ComboBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5,0" Click="OKButton_Click" />
            <Button Content="Cancel" Width="75" Margin="5,0" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>