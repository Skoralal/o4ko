<Window x:Class="o4ko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:o4ko"
        mc:Ignorable="d"
        Title="o4ko" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Workspace -->
        <StackPanel Grid.Column="0" Background="LightGray" Margin="10">
            <Button Content="Upload Image" Click="UploadImage_Click" Margin="5" />
        </StackPanel>

        <!-- Canvas in Viewbox -->
        <Viewbox Grid.Column="1" Stretch="Uniform" StretchDirection="Both" Margin="10">
            <Canvas x:Name="WorkingCanvas" Background="LightBlue" Width="1920" Height="1080" />
        </Viewbox>
    </Grid>
</Window>